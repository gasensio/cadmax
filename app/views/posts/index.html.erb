<div class="container">

    <div class="row">
      <div class="text-center">
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#mynewpost">
          New Post
        </button>
      </div>
    </div>

    <br>
    <hr>

    <div class="row" id="container_posts">
     <!-- <div class="panel-body">  Panel Body -->
        <table class="table table-bordered table-hover">
          <thead>
            <tr class="active">
            <th>Pedido</th>
            <th>Horas ordinarias facturadas</th>
            <th>Horas no facturables</th>
            <th>Extra</th>
            <th>Extra festivas</th>
            <th>Nocturnas</th>
            <th>Vacaciones</th>
            <th>Bolsa de horas generadas</th>
            <th>Bolsa de horas utilizadas</th>
            </tr>
          </thead>
          <thead>
            <tr class="active">
            <th>Pedido</th>
            <th><%= Post.sum(:horasof) %></th>
            <th>Horas no facturables</th>
            <th>Extra</th>
            <th><%= Post.sum(:extraf) %></th>
            <th>Nocturnas</th>
            <th>Vacaciones</th>
            <th>Bolsa de horas generadas</th>
            <th>Bolsa de horas utilizadas</th>
            </tr>
          </thead>
          <tbody  id="tabla">
            

        <%= render @posts %>

                  </tbody>

        </table>

    <!--  Modal create action -->
    <%= form_for(@post, remote: true) do |f| %>
    <div class="modal fade" id="mynewpost" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog">
          <div class="modal-content">

            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Post</h4>
            </div>
            <div class="modal-body">
              <div class="field">
                <%= f.label :title %><br>
                <%= f.text_area :title, class: "form-control post_title" %>
              </div>
              <div class="field">
                <%= f.label :content %><br>
                <%= f.text_area :content, class: "form-control post_content" %>
              </div>
              <div class="field">
                <%= f.label :pedido %><br>
                <%= f.text_area :pedido, class: "form-control post_content" %>
              </div>
              <div class="field">
                <%= f.label :horasof, 'Horas ordinarias facturadas' %><br>
                <%= f.text_area :horasof, class: "form-control post_content" %>
              </div>
              <div class="field">
                <%= f.label :horasnf, 'Horas no facturables' %><br>
                <%= f.text_area :horasnf, class: "form-control post_content" %>
              </div>
              <div class="field">
                <%= f.label :extra %><br>
                <%= f.text_area :extra, class: "form-control post_content" %>
              </div>
              <div class="field">
                <%= f.label :extraf, 'Extras festivas' %><br>
                <%= f.text_area :extraf, class: "form-control post_content" %>
              </div>
              <div class="field">
                <%= f.label :nocturnas %><br>
                <%= f.text_area :nocturnas, class: "form-control post_content" %>
              </div>
              <div class="field">
                <%= f.label :vacaciones %><br>
                <%= f.text_area :vacaciones, class: "form-control post_content" %>
              </div>
              <div class="field">
                <%= f.label :bolsahg, 'Bolsa de horas generadas' %><br>
                <%= f.text_area :bolsahg, class: "form-control post_content" %>
              </div>
              <div class="field">
                <%= f.label :bolsahu, 'Bolsa de horas utilizadas' %><br>
                <%= f.text_area :bolsahu, class: "form-control post_content" %>
              </div>
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal" id="mynewpostclose">Close</button>
              <%= submit_tag "Create", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
      <% end %>



<!-- </div> -->

