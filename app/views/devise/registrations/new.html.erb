<div class="row">
      <div class="col-md-12">
      <%= image_tag "logo.png", class: "img-responsive center-block" %>
      </div>
      </div>
<h2 class="text-center">Sign In</h2>
<div class="row center">
 <div class="col-md-4 col-md-offset-4"> 

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: "form-group"}) do |f| %>
  <%= devise_error_messages! %>

 <%= f.text_field :name, autofocus: true, label: false, placeholder: "Nombre y Apellido", class: "form-control form-group" %>


    <%= f.email_field :email, label: false, placeholder: "Email", class: "form-control form-group" %>


    
    <%= f.password_field :password, autocomplete: "off", label: false, placeholder: "Contraseña", class: "form-control form-group" %>

    <%= f.password_field :password_confirmation, autocomplete: "off", label: false, placeholder: "Confirmar contraseña", class: "form-control" %>

    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimo)</em>
    <% end %>

    <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>

<% end %>

<%= render "devise/shared/links" %>

  </div>
  </div>