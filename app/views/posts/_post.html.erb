            </div>
            <div class="modal-body">

            <div class="field">
            	<%= f.label :title %><br>
            	<%= f.text_area :title, class: "form-control" %>
            </div>
            <div class="field">
            	<%= f.label :content %><br>
            	<%= f.text_area :content, class: "form-control" %>
            </div>
            <div class="field">
            	<%= f.label :extra %><br>
            	<%= f.text_area :extra, class: "form-control" %>
            </div>
            <div class="field">
                <%= f.label :pedido %><br>
                <%= f.text_area :pedido, class: "form-control post_content" %>
              </div>
              <div class="field">
                <%= f.label :horasof, 'Horas ordinarias facturadas' %><br>
                <%= f.text_area :horasof, class: "form-control post_content" %>
              </div>
              <div class="field">
                <%= f.label :horasnf, 'Horas no facturables' %><br>
                <%= f.text_area :horasnf, class: "form-control post_content" %>
              </div>
              <div class="field">
                <%= f.label :extra %><br>
                <%= f.text_area :extra, class: "form-control post_content" %>
              </div>
              <div class="field">
                <%= f.label :extraf, 'Extras festivas' %><br>
                <%= f.text_area :extraf, class: "form-control post_content" %>
              </div>
              <div class="field">
                <%= f.label :nocturnas %><br>
                <%= f.text_area :nocturnas, class: "form-control post_content" %>
              </div>
              <div class="field">
                <%= f.label :vacaciones %><br>
                <%= f.text_area :vacaciones, class: "form-control post_content" %>
              </div>
              <div class="field">
                <%= f.label :bolsahg, 'Bolsa de horas generadas' %><br>
                <%= f.text_area :bolsahg, class: "form-control post_content" %>
              </div>
              <div class="field">
                <%= f.label :bolsahu, 'Bolsa de horas utilizadas' %><br>
                <%= f.text_area :bolsahu, class: "form-control post_content" %>
              </div>
            </div>
            <div class="modal-footer">
            	<button type="button" id="myupdatebutton_<%= post.id %>" class="btn btn-default" data-dismiss="modal">Close</button>
            	<%= submit_tag "Update", class: "btn btn-primary" %>
            </div>
		  </div>
		</div>
		</div>
		<% end %>
