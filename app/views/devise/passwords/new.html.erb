<h1 class="text-center">Voltenergie</h1>
<h2 class="text-center">Forgot your password?</h2>
<div class="row center">
 <div class="col-md-4 col-md-offset-4"> 


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-group" }) do |f| %>
  <%= devise_error_messages! %>



    <%= f.email_field :email, autofocus: true, label: false, placeholder: "Email", class: "form-control form-group" %>



    <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block" %>

<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
