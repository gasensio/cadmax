<div class="row">
      <div class="col-md-12">
      <%= image_tag "logo.png", class: "img-responsive center-block" %>
      </div>
      </div>
<h2 class="text-center">Log in</h2>
<div class="row center">
 <div class="col-md-4 col-md-offset-4"> 
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class: "form-group"}) do |f| %>



    <%= f.email_field :email, required: true, autocomplete: "on", autofocus: "true", label: false, placeholder: "Email", class: "form-control form-group"  %>


    <%= f.password_field :password, autocomplete: "off", label: false, placeholder: "Password", class: "form-control form-group" %>


    <%= f.submit "Log in", class: "btn btn-primary btn-block" %>

      <% if devise_mapping.rememberable? -%>

      <%= f.check_box :remember_me %>
      Remember Me

  
  <% end -%>

<% end %>

<%= render "devise/shared/links" %>
</div>
</div>